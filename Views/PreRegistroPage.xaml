<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SintomApp.Views.PreRegistroPage">

	<ContentPage.Background>
		<LinearGradientBrush>
			<GradientStop Color="#32aaf3" Offset="0.0"/>
			<GradientStop Color="White" Offset="1.0"/>
		</LinearGradientBrush>
	</ContentPage.Background>
	<Grid>
		<VerticalStackLayout Padding="30" Spacing="20">

			<Label Text="Introduce tu correo y token"
				   FontSize="20"
				   HorizontalOptions="Center"/>

			<Entry x:Name="CorreoEntry"
				   Placeholder="Correo electrónico"
				   Keyboard="Email"
				   TextColor="Black"/>

			<Entry x:Name="TokenEntry"
				   Placeholder="Token de acceso"
				   IsPassword="True"
				   TextColor="Black"/>

			<Button Text="Verificar y Continuar"
					Clicked="OnVerificarClicked"
					BackgroundColor="#007aff"
					TextColor="White"/>

		</VerticalStackLayout>
	</Grid>
	
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SintomApp.Views.Admin"
             Padding="0">
    
	<ContentPage.Background>
		<LinearGradientBrush>
            <GradientStop Color="#32aaf3" Offset="0.0"/>
			<GradientStop Color="White" Offset="1.0"/>
		</LinearGradientBrush>
	</ContentPage.Background>
    
	<Grid RowDefinitions="Auto,*,Auto" >
        <Frame
            Grid.Row="0"
            CornerRadius="12"
            BackgroundColor="White"
            BorderColor="Black"
            Padding="10"
            Margin="0,30,0,10"
            HasShadow="True">

            <Label
               x:Name="Title"
               Text="VISTA DE ADMINISTRADOR"
               FontSize="Large"
               Style="{StaticResource TitleLabelStyle}"
               TextColor="Black"
               HorizontalOptions="Center"/>

        </Frame>

        <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" Margin="30,0,30,20">
			<Button
                   x:Name="NewUserBtn"
                   Text="Nuevo Usuario"
                   Clicked="NewUserBtnClicked"
                   HorizontalOptions="Fill"
                   Margin="0,15,0,0"/>
			<Button
                   x:Name="EditUserBtn"
                   Text="Editar Usuario"
                   Clicked="EditUserBtnClicked"
                   HorizontalOptions="Fill"
                   Margin="0,15,0,0"/>
			<Button
                   x:Name="LoadUserBtn"
                   Text="Consultar Datos Usuario"
                   Clicked="LoadUserBtnClicked"
                   HorizontalOptions="Fill"
                   Margin="0,15,0,0"/>
			<Button
                   x:Name="DeleteUserBtn"
                   Text="Eliminar Usuario"
                   Clicked="DelUserBtnClicked"
                   HorizontalOptions="Fill"
                   Margin="0,15,0,0"/>
            <Button
                   x:Name="GenerarContrasenaBtn"
                   Text="Generar contraseña"
                   Clicked="GenerarContrasenaBtnClicked"
                   HorizontalOptions="Fill"
                   Margin="0,15,0,0"/>
            <Button
                   x:Name="AvisosBtn"
                   Text="Avisos"
                   Clicked="AvisosBtnClicked"
                   HorizontalOptions="Fill"
                   Margin="0,15,0,0"/>
		</VerticalStackLayout>
        <ImageButton Grid.Row="2"
                     Clicked="LogoutBtnClicked">
            <ImageButton.Source>
                <FontImageSource 
                    Glyph="🚪"
                    FontFamily="FontAwesome"
                    Color="Blue"
                    Size="30" />
            </ImageButton.Source>
        </ImageButton>

    </Grid>

</ContentPage>




